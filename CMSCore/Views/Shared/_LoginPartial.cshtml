@using Microsoft.AspNetCore.Identity
@inject SignInManager<CUser> SignInManager
@inject UserManager<CUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav" style="padding-top:8px">
            <a class="sign" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name!</a>
        </li>
        <li class="nav"style="padding-top:8px">
            <a >|</a>
        </li>
        <li class="nav">
            <form class="sign" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-block me-md-2">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav">
            <a class="sign" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
