@model CMSCore.Models.CUser

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit";
}
<div class="services-breadcrumb-w3ls-agile">
    <div class="inner_breadcrumb">
        <ul class="short">
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a><span>|</span></li>
            <li><a asp-area="Admin" asp-controller="User" asp-action="Index">User</a><span>|</span></li>
            <li>Edit</li>
        </ul>
    </div>
</div>
<div class="login" style="padding-bottom:50px;padding-top:50px">
    <h3 class="sign" style="background-color:aliceblue">Edit User :@Html.DisplayFor(model => model.UserName)</h3>
    <div class="container">
        <form asp-action="Edit" class="row" method="post" novalidate="novalidate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserName" />
            <input type="hidden" asp-for="NormalizedUserName" />
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="NormalizedEmail" />
            <input type="hidden" asp-for="EmailConfirmed" />
            <input type="hidden" asp-for="PasswordHash" />
            <input type="hidden" asp-for="SecurityStamp" />
            <input type="hidden" asp-for="ConcurrencyStamp" />
            <input type="hidden" asp-for="PhoneNumber" />
            <input type="hidden" asp-for="PhoneNumberConfirmed" />
            <input type="hidden" asp-for="TwoFactorEnabled" />
            <input type="hidden" asp-for="LockoutEnd" />
            <input type="hidden" asp-for="LockoutEnabled" />
            <input type="hidden" asp-for="AccessFailedCount" />

            <div class="col-12 col-lg-6 pl-4 pr-4 mt-5">
                <h5 class="mb-4">Profile</h5>
                <div class="form-group">
                    <label asp-for="UserNumber" class="control-label"></label>
                    <input asp-for="UserNumber" class="form-control" />
                    <span asp-validation-for="UserNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <input asp-for="Gender" class="form-control" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DOB" class="control-label"></label>
                    <input asp-for="DOB" class="form-control" />
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class=" form-group">
                    <label asp-for="DepartmentId" class="control-label"> </label>
                    <input asp-for="DepartmentId" class="control-label" />
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-lg-6 pl-4 pr-4 mt-5">
                <h5 class="mb-4">Account Information</h5>
                <div class="form-group">
                    <label class="control-label" for="TwoFactorEnabled">Two Factor Enabled</label>
                    <input class="form-control" type="checkbox" data-val="true" data-val-required="The TwoFactorEnabled field is required." id="TwoFactorEnabled" name="TwoFactorEnabled" value="true">
                    <span class="text-danger field-validation-valid" data-valmsg-for="TwoFactorEnabled" data-valmsg-replace="true"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" for="LockoutEnd">Lockout End</label>
                    <input class="form-control" type="text" id="LockoutEnd" name="LockoutEnd" value="">
                    <span class="text-danger field-validation-valid" data-valmsg-for="LockoutEnd" data-valmsg-replace="true"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" for="LockoutEnabled">Lockout Enabled</label>
                    <input class="form-control" type="checkbox" checked="checked" data-val="true" data-val-required="The LockoutEnabled field is required." id="LockoutEnabled" name="LockoutEnabled" value="true">
                    <span class="text-danger field-validation-valid" data-valmsg-for="LockoutEnabled" data-valmsg-replace="true"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" for="AccessFailedCount">Access Failed Count</label>
                    <input class="form-control" type="number" data-val="true" data-val-required="The AccessFailedCount field is required." id="AccessFailedCount" name="AccessFailedCount" value="0">
                    <span class="text-danger field-validation-valid" data-valmsg-for="AccessFailedCount" data-valmsg-replace="true"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordHash" class="control-label"></label>
                    <input asp-for="PasswordHash" class="form-control" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>
            </div>
            <center>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn" />
                </div>
                <div class="edu_button">
                    <a asp-action="Index" class="btn btn-primary btn-lg hvr-underline-from-left">Back to List</a>
                </div>
            </center>

        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
