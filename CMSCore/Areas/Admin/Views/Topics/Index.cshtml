@model IEnumerable<CMSCore.Models.Topic>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}
<div class="services-breadcrumb-w3ls-agile">
    <div class="inner_breadcrumb">
        <ul class="short">
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a><span>|</span></li>
            <li>Topic</li>
        </ul>
    </div>
</div>
<div class="edu_button" style="padding-top:20px">
    <a asp-action="Create" asp-area="Admin"class="btn btn-primary btn-lg hvr-underline-from-left">Create New</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeadLine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeadLine_2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeadLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeadLine_2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                <div class="edu_button">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-lg hvr-underline-from-left">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary btn-lg hvr-underline-from-left">Delete</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>